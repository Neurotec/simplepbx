

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
<h2 class='form-signin-heading'>SimplePBX</h2>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log In", class: 'btn bn-lg btn-primary btn-block' %>
  </div>
<% end %>

<div class="form-signin">
  <%= render "devise/shared/links" %>
</div>
