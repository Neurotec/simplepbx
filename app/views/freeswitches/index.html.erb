<p id="notice"><%= notice %></p>

<h1>Freeswitches</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Online?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @freeswitches.each do |freeswitch| %>
    <tr scope="row">
      <td><%= freeswitch.name %></td>
      <td><%= freeswitch.host %></td>
      <td>
          <% if freeswitch.online? %>
          <%= fa_icon "arrow-circle-up"%>
          <% else %>
          <%= fa_icon "arrow-circle-down" %>
          <% end %>
      </td>
      <td><%= link_to 'Show', freeswitch %></td>
      <td><%= link_to 'Edit', edit_freeswitch_path(freeswitch) %></td>
      <td><%= link_to 'Destroy', freeswitch, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="col-md-2">  
    <%= link_to 'New Freeswitch', new_freeswitch_path %>
  </div>
  <div class="col-md-10">
    <%= paginate @freeswitches %>
  </div>
</div>
