<p id="notice"><%= notice %></p>

<h1>Endpoint Routes</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Orden</th>
      <th>Endpoint</th>
      <th>Destination number</th>
      <th>Outbound</th>
      <th>Queue</th>
      <th>Extension</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @endpoint_routes.each do |endpoint_route| %>
    <tr scope="row">
      <td><%= endpoint_route.position %></td>
      <td><%= endpoint_route.endpoint %></td>
      <td><%= endpoint_route.destination_number %></td>
      <td><%= endpoint_route.outbound_routes.map{|r| r.to_s}.join(",") %>
      </td>
      <td><%= link_to 'Show', endpoint_route %></td>
      <td><%= link_to('Edit', edit_endpoint_route_path(endpoint_route)) if can?(:update, :endpoint_routes) %></td>
      <td><%= link_to('Destroy', endpoint_route, method: :delete, data: { confirm: 'Are you sure?' }) if can?(:delete, :endpoint_routes) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="col-md-2">
    <%= link_to('New Endpoint Route', new_endpoint_route_path) if can?(:create, :endpoint_routes) %>
  </div>
  <div class="col-md-10">
    <%= paginate @endpoint_routes%>
  </div>
</div>
