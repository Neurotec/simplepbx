<p id="notice"><%= notice %></p>

<h1>User Groups</h1>

<table class="table">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Group permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_groups.each do |user_group| %>
      <tr>
        <td><%= user_group.name %></td>
        <td><%= user_group.group_permissions %></td>
        <td><%= link_to 'Show', user_group %></td>
        <td><%= link_to('Edit', edit_user_group_path(user_group)) if can?(:update, :user_groups) %></td>
        <td><%= link_to('Destroy', user_group, method: :delete, data: { confirm: 'Are you sure?' }) if can?(:delete, :user_groups) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New User Group', new_user_group_path) if can?(:create, :user_groups) %>
