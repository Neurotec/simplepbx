<%= simple_form_for(@inbound) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :endpoint, collection: Endpoint.from_user(current_user) %>
    <%= f.input :name %>
    <%= f.input :host %>
    <%= f.input :username %>
    <%= f.input :password, as: :string %>
    <%= f.input :register %>
    <%= f.input :cid_name %>
    <%= f.input :cid_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
